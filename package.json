{
  "name": "klecks",
  "version": "0.9.10.2",
  "type": "module",
  "browserslist": [
    "> 0.2%",
    "last 2 versions",
    "not dead",
    "Firefox ESR",
    "Chrome 61",
    "Firefox 60",
    "ios_saf 9"
  ],
  "scripts": {
    "start": "parcel serve src/index.html --no-cache",
    "build": "parcel build src/index.html --public-url .",
    "build:web": "parcel build src/index.html",
    "build:embed": "parcel build src/embed.ts",
    "build:help": "parcel build src/help.html --public-url .",
    "lang:add": "node src/languages/generate.js add",
    "lang:sync": "node src/languages/generate.js sync",
    "lang:build": "node src/languages/generate.js build",
    "electron:dev": "NODE_ENV=development electron electron/main.js",
    "electron:start": "npm run start & sleep 3 && npm run electron:dev",
    "electron:build": "npm run build && electron-builder",
    "electron:package": "npm run lang:build && npm run build && electron-builder"
  },
  "dependencies": {
    "@parcel/transformer-glsl": "2.16.1",
    "@parcel/transformer-sass": "2.16.1",
    "@swc/helpers": "^0.5.17",
    "ag-psd": "28.3.1",
    "buffer": "6.0.3",
    "js-beautify": "1.15.4",
    "json5": "2.2.3",
    "mdn-polyfills": "5.20.0",
    "parcel": "^2.16.1",
    "polygon-clipping": "0.15.7",
    "transformation-matrix": "3.1.0"
  },
  "build": {
    "appId": "com.bitbof.klecks",
    "productName": "Klecks",
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!dist/*.map",
      "!node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "src/app/img/klecks-icon-512-512.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "src/app/img/klecks-icon-512-512.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "src/app/img/klecks-icon-512-512.png",
      "category": "Graphics",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "electron": "^39.2.3",
    "electron-builder": "^26.3.0"
  }
}
